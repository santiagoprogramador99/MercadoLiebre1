<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	<% if (userLogin && userLogin.rol === 1) { %>
		<%- include('admin') %> 
	<% }else{ %>
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% productsVisited.forEach(({id,title,price,discount,images}) => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= id %>">
							<figure class="product-box_image">
								<% images.forEach(image => { %>
									<% if (image.primary) { %>
										<img src="/images/products/<%= image.file %>" alt="imagen de producto">
									<% } %>
								<% }) %>
							</figure>
							<article class="product-box_data">
								<h2><%= toThousand(+price) %></h2>
								<span><%= discount %>% OFF</span>
								<p><%= title %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
			
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% productsInSale.forEach(({id,title,price,discount,images}) => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= id %>">
							<figure class="product-box_image">
								<% images.forEach(image => { %>
									<% if (image.primary) { %>
										<img src="/images/products/<%= image.file %>" alt="imagen de producto">
									<% } %>
								<% }) %>
							</figure>
							<article class="product-box_data">
								<h2><%= toThousand(+price) %></h2>
								<span><%= discount %>% OFF</span>
								<p><%= title %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
	<script src="/js/home.js"></script>
	<% } %>
</body>	
</html>